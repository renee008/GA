<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <title>Checklist</title>

    <style>
        .checklist-card {
            margin-bottom: 20px;
            height: 100%;
        }

        .card-img {
            margin-right: auto;
            margin-left: auto;
            height: 200px;
            width: auto; 
        }

        .card-spacing {
            display: flex;
            justify-content: space-between;
        }

        .btn-bottom {
            margin-top: auto;
            display: flex;
            justify-content: space-between;
            gap: 30px
        }

        body {
            background-image: url('/images/checklist.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            display: flex;
            flex-direction: column;
        }

        .title  {
            color: white;
        }

    </style>
</head>

<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <div class="title">
            <h2>Checklist details</h2>
            <p>Viewing cards for checklist <%= checklist.checklist_name %> <a href="/viewchecklist">Back</a></p>
        </div>
        
        <div class="row row-cols-1 row-cols-md-4 g-4">
            <% for(let i=0; i < card_in_checklist.length; i++) { %>
            <div class="col">
                <div class="card checklist-card">
                    <img src="/images/<%= card_in_checklist[i].Image %>" class="card-img-top card-img" alt="Card Image">
                    <div class="card-body">
                        <p class="card-text">Player Name: <%= card_in_checklist[i].player_name %></p>
                        <p class="card-text">Team: <%= card_in_checklist[i].team_name %></p>
                        <p class="card-text">Type: <%= card_in_checklist[i].Type %></p>
                        <p class="card-text">Numbered: <%= card_in_checklist[i].numbered %></p>
                   
                    
                        <div class="card-spacing">
                            <div class="btn-bottom">
                                <!-- edit link -->
                                <a href="/editcard/checklist/<%= checklist.Checklist_ID %>/card/<%= card_in_checklist[i].id %>" class="btn btn-primary">Edit</a>
                                
                                <!-- delete link -->                              
                                <a href= "/deletecard/checklist/<%= checklist.Checklist_ID %>/card/<%= card_in_checklist[i].id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this card?')">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

</body>
</html>

