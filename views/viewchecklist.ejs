<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <title>View Checklist</title>

    <style>
        .checklist-card {
            margin-bottom: 20px;
        }

        .card-img-mid {
            display: block;
            margin-right: auto;
            margin-left: auto;
            width: 30%;
        }

        .image-size {
            object-fit: cover;
            height: 200px;
        }

        .card-spacing {
            display: flex;
            justify-content: space-between;
        }

        body {
            background-image: url('/images/viewchecklist.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }

    </style>
        
    </style>
</head>

<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <div class="text-center">
            <h2>View Checklist</h2>
            <p>View all the checklists created. Click on the checklist image to see the cards added into the checklist.</p>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% for(let i=0; i < checklist.length; i++) { %>
            <div class="col">
                <div class="card checklist-card">
                    <a href="/checklist/<%= checklist[i].Checklist_ID %>">
                        <img src="images/<%= checklist[i].image %>" class="card-img-top card-img-mid image-size" alt="Checklist Image" style="width: 50%">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title"><%= checklist[i].Name %></h5>
                        <p class="card-text">Description: <%= checklist[i].Description %></p>
                
                        <div class="card-spacing">
                            <!-- add card link  -->
                             <a href="/checklist/<%= checklist[i].Checklist_ID %>/addcard" class="btn btn-success">Add card</a>
                            <!-- edit link -->
                            <a href="/editchecklist/<%= checklist[i].Checklist_ID %>" class="btn btn-primary">Edit</a>
                
                            <!-- delete link -->
                            <a href="/deletechecklist/<%= checklist[i].Checklist_ID %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this checklist?')">Delete</a>
                        </div>
                    </div>
                </div>
                
                
            </div>
            <% } %>
        </div>
    </div>

</body>
</html>
