<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <title>Add card</title>

    <style>
         body {
            background-image: url('/images/addcard.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            background-attachment: fixed;
        }
    </style>
</head>

<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <h2>Add card</h2>
                    <p>Add the cards you want into the checklist you have selected!</p>
                </div>

                <!--specific which route the data will be sent to-->
                <form action="/card" method="POST" enctype="multipart/form-data">

                    <!-- checklist selected -->
                    <div class="mb-3 mt-3">
                        <label for="checklist_ID">Selected checklist:</label>
                        <input type="text" id="checklist_ID" name="Checklist_ID" value="<%= checklist.Name %>" disabled>
                        <input type="hidden" id="checklist_ID_hidden" name="Checklist_ID" value="<%= checklist.Checklist_ID %>">
                    </div>

                    <!-- dropdown for team selection  -->
                    <div class="mb-3 mt-3">
                        <label for="Team_ID">Team:</label>
                        <select class="form-select" id="Team_ID" name="Team_ID">
                            <% team.forEach(team => { %>
                                <option value="<%= team.Team_ID %>"><%= team.Name %></option>
                            <% }); %>
                        </select>
                    </div>

                    <!-- dropdown for player selection  -->
                    <div class="mb-3 mt-3">
                        <label for="Player_ID">Player:</label>
                        <select class="form-select" id="Player_ID" name="Player_ID">
                            <% players.forEach(players => { %>
                                <option value="<%= players.Player_ID %>"><%= players.Player_Name %></option>
                            <% }); %>
                        </select>
                    </div>

                    <!-- dropdown for card type -->
                    <div class="mb-3 mt-3">
                        <label for="card_ID">Card Type:</label>
                        <select class="form-select" id="card_ID" name="card_ID">
                            <% card.forEach(card => { %>
                                <option value="<%= card.card_ID %>"><%= card.Type %></option>
                            <% }); %>
                        </select>
                    </div>

                    <!-- user to type in whether their card is numbered/non-numbered -->
                    <div class="mb-3 mt-3">
                        <label for="numbered">Numbered to: (Can leave blank if card is non-numbered)</label>
                        <input type="text" class="form-control" id="numbered" placeholder="Numbered to:" name="numbered">
                    </div>

                    <!-- user to select the file of the card they want to add -->
                    <div class="mb-3 mt-3">
                        <label for="Image" class="form-label">Image:</label>
                        <input type="file" class="form-control" id="Image" placeholder="Include an image" name="image" accept="image/*" required>
                    </div>

                    <!-- for submission -->
                    <button type="submit" class="btn btn-primary">Add Card</button>

                    <a href="/viewchecklist">Back</a>

                </form>
            </div>
        </div>
    </div>

</body>

</html>
